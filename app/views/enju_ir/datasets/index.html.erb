<p id="notice"><%= notice %></p>

<h1>Datasets</h1>

<table>
  <thead>
    <tr>
      <th>Manifestation</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @datasets.each do |dataset| %>
      <tr>
        <td><%= link_to dataset.manifestation.original_title, main_app.manifestation_path(dataset.manifestation) %></td>
        <td><%= dataset.user.username %></td>
        <td><%= link_to t('page.show'), dataset %></td>
        <td><%= link_to t('page.edit'), edit_dataset_path(dataset) %></td>
        <td><%= link_to t('page.destroy'), dataset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dataset', new_dataset_path %>
